<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@+id/action_home">

    <keep_state_fragment
        android:id="@+id/action_home"
        android:name="com.cxsplay.wad.main.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_action_home_to_detail1Fragment"
            app:destination="@id/detail1Fragment"
            app:enterAnim="@anim/v_fragment_enter"
            app:exitAnim="@anim/v_fragment_exit"
            app:popEnterAnim="@anim/v_fragment_pop_enter"
            app:popExitAnim="@anim/v_fragment_pop_exit" />

        <action
            android:id="@+id/aaa"
            app:destination="@id/detail1Fragment" />

    </keep_state_fragment>

    <keep_state_fragment
        android:id="@+id/action_msg"
        android:name="com.cxsplay.wad.main.MsgFragment"
        android:label="fragment_msg"
        tools:layout="@layout/fragment_msg" />

    <keep_state_fragment
        android:id="@+id/action_my"
        android:name="com.cxsplay.wad.main.MyFragment"
        android:label="fragment_my"
        tools:layout="@layout/fragment_my" />

    <keep_state_fragment
        android:id="@+id/detail1Fragment"
        android:name="com.cxsplay.wad.main.home.Detail1Fragment"
        android:label="Detail1Fragment" />

</navigation>